{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "printWidth": 80,
  "arrowParens": "always",
  "importOrder": [
    "^react$",
    "^react",
    "^next/(.*)$",
    "^next-auth/(.*)$",
    "^@/components/layout/(.*)",
    "^@/components/ui/(.*)",
    "^@/app/utils/(.*)",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderParserPlugins": [
    "typescript",
    "jsx",
    "decorators-legacy",
    "classProperties"
  ],
  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
